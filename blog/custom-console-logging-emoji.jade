        { emoji: 'üç∫', name: 'beer' },
        { emoji: 'üí©', name: 'poo' }
    ];

    // Create custom commands
    commands.forEach(({ name, emoji }) => window.console[name] = (...args) => console.log(emoji + ' ' + args.join(', ')));

